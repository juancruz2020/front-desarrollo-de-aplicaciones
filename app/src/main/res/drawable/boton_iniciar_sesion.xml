<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/sombra">
        <shape android:shape="rectangle">

            <solid android:color="#75000000" />

            <corners android:radius="30dp" />
        </shape>
    </item>


    <item  android:bottom="5dp">
        <shape>

            <size
                android:width="255dp"
                android:height="50dp">
            </size>

            <solid
                android:color="@color/rosa">
            </solid>

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp">
            </padding>

            <corners
                android:radius="30dp">
            </corners>

            <gradient android:startColor="#F483A9"
                android:angle="270"
                android:centerColor="@color/rosa"
                android:endColor="@color/rosa">

            </gradient>
        </shape>


    </item>


</layer-list>