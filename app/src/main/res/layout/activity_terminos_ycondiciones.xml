<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TerminosYCondiciones"
    android:background="#F5E9DC">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_background"
        android:src="@drawable/x"
        app:tint="#000000"
        android:scaleType="centerInside"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="cerrar">
    </ImageButton>

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="Términos y Condiciones"
        android:textColor="#565656"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="24sp">

    </TextView>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:clipToPadding="false"
        android:background="#F5E9DC"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintBottom_toTopOf="@id/footer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Aceptacion de los términos"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#565656"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand_book"
                android:justificationMode="inter_word"
                android:textSize="16sp"
                android:textColor="#565656"
                android:text="Al acceder o utilizar esta Aplicación, usted reconoce haber leído, entendido y aceptado estos Términos y Condiciones, así como nuestra Política de Privacidad. Si no está de acuerdo, no podrá utilizar nuestros servicios."
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Registro de Usuarios y Alumnos"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#565656"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand_book"
                android:justificationMode="inter_word"
                android:textSize="16sp"
                android:textColor="#565656"
                android:text="El proceso de registración se realiza en dos etapas. Se validará el alias y correo electrónico. Se enviará un código de confirmación al correo informado con una validez de 24 horas. El alta como Alumno requiere, adicionalmente, los datos de medio de pago, foto de DNI y número de trámite. El cambio de perfil de usuario a alumno es posible. No se permite la baja de la condición de alumno una vez registrada."
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Uso de la Aplicación y Conexión"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#565656"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand_book"
                android:justificationMode="inter_word"
                android:textSize="16sp"
                android:textColor="#565656"
                android:text="Para utilizar la Aplicación se requiere conexión a Internet. En caso de no disponer de una red gratuita, se le informará y se permitirá almacenar temporalmente las recetas hasta que se disponga de una conexión sin cargo. La Empresa no se responsabiliza por los costos asociados al uso de datos móviles."
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Carga y Publicación de Recetas"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#565656"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand_book"
                android:justificationMode="inter_word"
                android:textSize="16sp"
                android:textColor="#565656"
                android:text="Cada receta cargada por un usuario será evaluada por personal de la Empresa previo a su publicación. Solo el creador podrá visualizar recetas no aprobadas. La Empresa se reserva el derecho de rechazar recetas que considere inapropiadas, incompletas o que infrinjan derechos de terceros."
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Comentarios y Valoraciones"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#565656"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/quicksand_book"
                android:justificationMode="inter_word"
                android:text="Los comentarios sobre recetas serán moderados por la Empresa antes de su publicación. Nos reservamos el derecho de editar, eliminar o rechazar comentarios que contengan lenguaje ofensivo, contenido inapropiado o que infrinjan derechos de terceros."
                android:textColor="#565656"
                android:textSize="16sp">

            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Propiedad Intelectual"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#565656"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand_book"
                android:justificationMode="inter_word"
                android:textSize="16sp"
                android:textColor="#565656"
                android:text="Todo el contenido disponible en la Aplicación (textos, imágenes, videos, recetas, marcas, logos) es propiedad de la Empresa o de sus respectivos autores y se encuentra protegido por las leyes de propiedad intelectual. Queda prohibida su reproducción, distribución o modificación sin autorización expresa."
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Modificaciones de los Términos"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#565656"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand_book"
                android:justificationMode="inter_word"
                android:textSize="16sp"
                android:textColor="#565656"
                android:text="La Empresa podrá modificar estos Términos y Condiciones en cualquier momento, notificando a los usuarios a través de la Aplicación. El uso continuado de la misma implica la aceptación de los términos actualizados."
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Contacto"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#565656"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand_book"
                android:justificationMode="inter_word"
                android:textSize="16sp"
                android:textColor="#565656"
                android:text="Para consultas, sugerencias o reclamos, puede comunicarse a través de soyuncorreodecontactoderecetas@gmail.com o mediante las vías disponibles en la Aplicación.  Todos los derechos reservados."
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp">

            </TextView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#E25659"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Inicio -->
        <LinearLayout
            android:id="@+id/btnFooterInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="irInicio">
            <ImageView
                android:src="@drawable/inicio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="#FFFFFF"/>
            <TextView
                android:text="Inicio"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- Cursos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="irCursos">
            <ImageView
                android:src="@drawable/cursos"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="#FFFFFF"/>
            <TextView
                android:text="Cursos"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

        </LinearLayout>
        <!-- Buscar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="irBusqueda">
            <ImageView
                android:src="@drawable/busquedaxml"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="#FFBA61"/>
            <TextView
                android:text="Buscar"
                android:textColor="#FFBA61"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="irPerfil">
            <ImageView
                android:src="@drawable/perfil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="#FFFFFF"/>
            <TextView
                android:text="Perfil"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Botón central circular -->
    <FrameLayout
        android:id="@+id/btnCargarReceta"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle_button"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="cargarReceta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:src="@drawable/libro"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            app:tint="#E25659" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>