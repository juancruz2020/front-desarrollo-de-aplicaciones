<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/rounded_white_shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvNombreIngrediente"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Pechuga de Pollo (gramos)"
            android:textSize="16sp"
            android:textColor="#0A2533" />

        <ImageButton
            android:id="@+id/btnMenosCantidad"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_background"
            android:src="@drawable/ic_menos"
            app:tint="#E25683"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/tvCantidadIngrediente"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="300"
            android:textSize="16sp"
            android:textColor="#0A2533"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginEnd="6dp" />

        <ImageButton
            android:id="@+id/btnMasCantidad"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_background"
            android:src="@drawable/ic_mas"
            app:tint="#E25683"
            android:scaleType="centerInside"
            android:padding="6dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
