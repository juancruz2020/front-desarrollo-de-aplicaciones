<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E9DC"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Perfil"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Bienvenido!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0A2533"
            android:layout_marginBottom="16dp"/>

        <!-- Card Usuario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_white_shadow"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/avatar_border"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/circle_mask"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:src="@drawable/ic_default" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GRamsay15"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#0A2533" />

                <TextView
                    android:id="@+id/tvNombreCompleto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gordon Ramsay"
                    android:textSize="14sp"
                    android:textColor="#0A2533"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gordonramsay@gmail.com"
                    android:textSize="14sp"
                    android:textColor="#748189"
                    android:autoLink="email"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDNI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24.675.876"
                    android:textSize="14sp"
                    android:textColor="#0A2533"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvTipoUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario"
                    android:textSize="14sp"
                    android:textColor="#E59797"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Convertite en Alumno -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Convertite en Alumno!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0A2533"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Como alumno podrás inscribirte en cursos, acceder a material exclusivo y registrar asistencias."
            android:textSize="14sp"
            android:textColor="#748189"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnConvertirseAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convertirme en Alumno"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E59797"
            android:textStyle="bold"
            android:elevation="2dp"
            android:padding="8dp"
            android:layout_marginBottom="24dp"/>

        <!-- Opciones -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opciones"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0A2533"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E59797"
            android:textStyle="bold"
            android:elevation="2dp"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnTerminos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Términos y Condiciones"
            android:onClick="irTerminos"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E59797"
            android:textStyle="bold"
            android:elevation="2dp"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacto/Soporte"
            android:onClick="irTerminos"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E59797"
            android:textStyle="bold"
            android:elevation="2dp"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E59797"
            android:textStyle="bold"
            android:elevation="2dp"
            android:padding="8dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>
