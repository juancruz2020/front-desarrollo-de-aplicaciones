<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/rounded_white_shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Texto con formato: Cantidad Unidad | Nombre -->
        <TextView
            android:id="@+id/tvDetalleIngrediente"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="50 g | Harina"
            android:textSize="16sp"
            android:textColor="#0A2533"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Botón Editar -->
        <ImageButton
            android:id="@+id/btnEditarIngrediente"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_editar"
            android:contentDescription="Editar"
            android:layout_marginEnd="4dp" />

        <!-- Botón Eliminar -->
        <ImageButton
            android:id="@+id/btnEliminarIngrediente"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_basura"
            android:contentDescription="Eliminar" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

