<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E9DC"
    android:paddingTop="16dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    >

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp">

                <ImageButton
                    android:id="@+id/btnBackSearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_back"
                    android:contentDescription="Volver"
                    android:scaleType="centerInside"
                    android:padding="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etSearchBar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Buscar..."
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawablePadding="8dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textColorHint="#0A2533"
                    android:textColor="#0A2533"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#08666666" /> <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultar Por"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/btnBuscarReceta"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="Receta"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#E59797"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="10dp"/>

                    <Button
                        android:id="@+id/btnBuscarIngrediente"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="Ingrediente"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#E59797"
                        app:cornerRadius="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnNoPoseeIngrediente"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="No Posee Ingrediente"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:backgroundTint="#E59797"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="10dp"/>

                    <Button
                        android:id="@+id/btnBuscarUsuario"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:text="Usuario"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#E59797"
                        app:cornerRadius="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Plato:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_corners"
                        android:clipChildren="true"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/entradas"
                            android:scaleType="centerCrop"
                            android:alpha="0.8" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#40000000" />

                        <TextView
                            android:id="@+id/btnPlatoPrincipal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Entradas"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corners"
                        android:clipChildren="true"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pastas"
                            android:scaleType="centerCrop"
                            android:alpha="0.8" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#40000000" />

                        <TextView
                            android:id="@+id/btnDesayuno"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Pastas"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_corners"
                        android:clipChildren="true"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/carne"
                            android:scaleType="centerCrop"
                            android:alpha="0.8" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#40000000" />

                        <TextView
                            android:id="@+id/btnAlmuerzo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Almuerzo"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corners"
                        android:clipChildren="true"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/pescado"
                            android:scaleType="centerCrop"
                            android:alpha="0.8" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#40000000" />

                        <TextView
                            android:id="@+id/btnCena"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Pescado"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="8dp">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_corners"
                        android:clipChildren="true"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ensalada"
                            android:scaleType="centerCrop"
                            android:alpha="0.8" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#40000000" />

                        <TextView
                            android:id="@+id/btnPostre"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Ensaladas"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corners"
                        android:clipChildren="true"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/postre"
                            android:scaleType="centerCrop"
                            android:alpha="0.8" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#40000000" />

                        <TextView
                            android:id="@+id/btnBebida"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Postres"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_corners"
                        android:clipChildren="true"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/bebidas"
                            android:scaleType="centerCrop"
                            android:alpha="0.8" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#40000000" />

                        <TextView
                            android:id="@+id/btnSnack"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Bebidas"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corners"
                        android:clipChildren="true"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/guarnicion"
                            android:scaleType="centerCrop"
                            android:alpha="0.8" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#40000000" />

                        <TextView
                            android:id="@+id/btnGuarnicion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Guarnición"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"/>
                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvResultados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#E25659"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Inicio -->
        <LinearLayout
            android:id="@+id/btnFooterInicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="irInicio">
            <ImageView
                android:src="@drawable/inicio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="#FFFFFF"/>
            <TextView
                android:text="Inicio"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- Cursos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="irCursos">
            <ImageView
                android:src="@drawable/cursos"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="#FFFFFF"/>
            <TextView
                android:text="Cursos"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- Botón central circular -->
        <FrameLayout
            android:id="@+id/btnCargarReceta"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/circle_button"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="cargarReceta">
            <ImageView
                android:src="@drawable/libro"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                app:tint="#E25659"/>
        </FrameLayout>

        <!-- Buscar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="irBusqueda">
            <ImageView
                android:src="@drawable/busquedaxml"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="#FFBA61"/>
            <TextView
                android:text="Buscar"
                android:textColor="#FFBA61"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="irPerfil">
            <ImageView
                android:src="@drawable/perfil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="#FFFFFF"/>
            <TextView
                android:text="Perfil"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>